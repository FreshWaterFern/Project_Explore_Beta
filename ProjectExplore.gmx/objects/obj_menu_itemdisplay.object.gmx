            <string>/// Item Display Controls
var key_pressed = false;
if ( keyboard_check_pressed(vk_right) == true or mouse_wheel_up() == true )
{
    item_index ++;
    key_pressed = true;
}
if ( keyboard_check_pressed(vk_left) == true or mouse_wheel_down() == true )
{
    item_index --;
    key_pressed = true;
}
// Check For Mouse Clicks
if ( mouse_x &gt; view_wview[0]-220-18 &amp;&amp; mouse_x &lt; view_wview[0]-220+18 )
{
    if ( mouse_y &gt; 32-18 &amp;&amp; mouse_y &lt; 32+18 )
    {
        if ( mouse_check_button_pressed(mb_left) == true )
        {
        item_index ++;
        key_pressed = true;
        }
    }
}
if ( mouse_x &gt; view_wview[0]-256-18 &amp;&amp; mouse_x &lt; view_wview[0]-256+18 )
{
    if ( mouse_y &gt; 32-18 &amp;&amp; mouse_y &lt; 32+18 )
    {
        if ( mouse_check_button_pressed(mb_left) == true )
        {
        item_index --;
        key_pressed = true;
        }
    }
}


if ( item_index &lt; 1 )
{
    item_index = item_count;
}
if ( item_index &gt; item_count )
{
    item_index = 1;
}

if ( key_pressed == true )
{
    event_user(0);
}
