            <kind>1</kind>
            <string>/// Mouse Click
if ( image_index == 1 )
{
    if ( item_id != 0 )
    {draw_name = true;}
    else
    {draw_name = false;}
    if ( mouse_check_button_pressed(mb_left) )
    {
        global.v_item_moving = true;
        global.v_slot_inst = id;
    }

    if ( mouse_check_button_pressed(mb_right) &amp;&amp; item_stack &gt; 0 )
    {
    global.v_slot_x = grid_x;
    global.v_slot_y = grid_y;
    global.v_slot_inst = id;
    global.v_slot_item_id = item_id;
    global.v_item_stack = item_stack;
    if ( keyboard_check(vk_control) == true )
    {
        if ( item_id != 0 )
        {
        inventory_drop_item(grid_x,grid_y,inv_part);
        with(obj_inv_slot){event_user(0)}
        exit;
        }
    }
    if ( keyboard_check(vk_shift) == false )
    {
        db_item_use(item_id);
        global.v_item_moving = false;
        draw_name = false;
        exit;
    }
    if ( keyboard_check(vk_shift) == true )
    {
        if ( item_stack &gt; 1 )
        {
        global.v_slot_inst=id;
        if ( inventory_add(item_id,floor(item_stack/2),true) )
        {
        global.v_item_moving = false;
        item_stack -= item_stack/2;
        item_stack = ceil(item_stack);
        inventory_destroy_item(grid_x,grid_y,item_id,item_stack);
        draw_name = false;
        with(obj_inv_slot){event_user(0)}
        exit;
        }
        }
    }
    }

if ( mouse_check_button_released(mb_left) )
{
    if ( global.v_item_moving == true )
    {
        global.v_item_moving = false;
        if ( grid_x != global.v_slot_inst.grid_x or grid_y != global.v_slot_inst.grid_y )
        {
        inventory_move_item();
        if ( storage_id != 0 ){
        world_obj_update(storage_id);
        if(storage_id.object_index==obj_archetype_cooking){
        storage_id.cooking_grid[#grid_x,grid_y]=0;}}
        
        if ( global.v_slot_inst.storage_id != 0 ){
        world_obj_update(global.v_slot_inst.storage_id);
        if(global.v_slot_inst.storage_id.object_index==obj_archetype_cooking){
        global.v_slot_inst.storage_id.cooking_grid[#grid_x,grid_y]=0;}}
        with(obj_inv_slot){event_user(0)}
        exit;
